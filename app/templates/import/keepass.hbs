<div class="import import_mode">
    <div class="import_source">
        <div>{{res 'importKeePassInstructions1'}}</div>
        <input type="file" class="import__file-ctrl hide-by-pos" />
        <div class="import__icons">
            <div class="import__icon import__icon-import" tabindex="1">
                <i class="fa fa-folder-open import__icon-i"></i>
                <div class="import__icon-text">{{res 'openSelectFile'}}</div>
            </div>
        </div>
        <div style="text-align: center;">{{res 'dragDrop'}}</div>
        <div class="open__pass-area hide">
            <div class="hide">
                {{!-- we need these inputs to screw browsers passwords autocompletion --}}
                <input type="text" style="display:none" name="username">
                <input type="password" style="display:none" name="password">
            </div>
            <div class="open__pass-warn-wrap">
                <div class="open__pass-warning muted-color invisible"><i class="fa fa-exclamation-triangle"></i> {{res 'openCaps'}}</div>
            </div>
            <div class="open__pass-field-wrap">
                <input class="open__pass-input" type="password" autocomplete="new-password" maxlength="1024"
                    id="importPassword" tabindex="13" />
            </div>
        </div>

        <div style="text-align: center; justify-content: center; display: flex;">
            <button tabindex="16" class="vault_action hide" id="importButton">
                <div class="content">{{res 'import'}}</div>
                <div class="opening-icon"><i class="fa fa-spinner fa-spin"></i></div>
            </button>
        </div>
    </div>
    <div class="import__dropzone">
        <i class="fa fa-lock muted-color import__dropzone-icon"></i>
        <h1 class="muted-color import__dropzone-header">{{res 'openDropHere'}}</h1>
    </div>
</div>
